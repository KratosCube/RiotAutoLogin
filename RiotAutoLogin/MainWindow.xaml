                                                <ToggleButton x:Name="tglRunOnStartup" Grid.Column="1" Content="OFF" Width="100" Height="40" Style="{StaticResource ModernToggleButton}" Checked="tglRunOnStartup_Checked" Unchecked="tglRunOnStartup_Unchecked"/>
                                            </Grid>
                                            <TextBlock Text="If enabled, the application will start minimized to the system tray when you log into Windows." Foreground="{StaticResource TextColorBrush}" FontSize="14" TextWrapping="Wrap" Margin="0,10,0,0" Opacity="0.7"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Separator -->
                                    <Rectangle Height="1" Fill="#3E3E4A" Margin="0,10,0,30" />

                                    <!-- Auto Accept Section -->
                                    <TextBlock Text="AUTO ACCEPT MATCHES" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Automatically accept matches when found" Foreground="{StaticResource TextColorBrush}" FontSize="14" VerticalAlignment="Center"/>
                                                <ToggleButton x:Name="tglAutoAccept" Grid.Column="1" Content="OFF" Width="100" Height="40" Style="{StaticResource ModernToggleButton}" Checked="tglAutoAccept_Checked" Unchecked="tglAutoAccept_Unchecked"/>
                                            </Grid>
                                            <!-- Status Indicator -->
                                            <Border Background="#2A2A36" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse x:Name="autoAcceptStatusIndicator" Width="12" Height="12" Fill="#707070" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Column="1" x:Name="txtAutoAcceptStatus" Text="Auto-accept is inactive. Enable to automatically accept game matches." Foreground="{StaticResource TextColorBrush}" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Separator -->
                                    <Rectangle Height="1" Fill="#3E3E4A" Margin="0,10,0,30" />
                                    
                                    <!-- Quick Login Hotkey Section -->
                                    <TextBlock Text="QUICK LOGIN HOTKEY" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                        <StackPanel>
                                            <TextBlock Text="Set the key for the Ctrl + Alt + [Key] shortcut to open the quick login window." Foreground="{StaticResource TextColorBrush}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/> <!-- "Ctrl + Alt + " Text -->
                                                    <ColumnDefinition Width="*" MinWidth="60"/> <!-- Key TextBox -->
                                                    <ColumnDefinition Width="Auto"/> <!-- Save Button -->
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Ctrl + Alt + " VerticalAlignment="Center" Foreground="{StaticResource TextColorBrush}" Margin="0,0,5,0" Grid.Column="0"/>
                                                <TextBox x:Name="txtHotkeyKey" Width="60" Style="{StaticResource ModernTextBox}" VerticalAlignment="Center" Grid.Column="1" MaxLength="1" CharacterCasing="Upper" Text="L" PreviewTextInput="txtHotkeyKey_PreviewTextInput" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                                <Button x:Name="btnSaveHotkey" Content="Save Hotkey" Style="{StaticResource ModernButton}" Click="btnSaveHotkey_Click" Margin="15,0,0,0" Grid.Column="2" HorizontalAlignment="Left" Padding="10,5" MinHeight="30" FontSize="14"/>                                                
                                            </Grid>
                                            <TextBlock x:Name="lblCurrentHotkey" Text="Current Hotkey: Ctrl + Alt + L" Foreground="{StaticResource TextColorBrush}" Margin="0,10,0,0" FontStyle="Italic" Opacity="0.8"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Separator -->
                                    <Rectangle Height="1" Fill="#3E3E4A" Margin="0,10,0,30" />
                                    
                                    <!-- Auto Pick/Ban Settings -->
                                    <TextBlock Text="AUTO PICK/BAN SETTINGS" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Automatically pick champions when found" Foreground="{StaticResource TextColorBrush}" FontSize="14" VerticalAlignment="Center"/>
                                                <ToggleButton x:Name="tglAutoPickEnabled" Grid.Column="1" Content="OFF" Width="100" Height="40" Style="{StaticResource ModernToggleButton}" Checked="chkAutoPickEnabled_Checked" Unchecked="chkAutoPickEnabled_Unchecked"/>
                                            </Grid>
                                            <!-- Status Indicator -->
                                            <Border Background="#2A2A36" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse x:Name="autoPickStatusIndicator" Width="12" Height="12" Fill="#707070" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Column="1" x:Name="txtAutoPickStatus" Text="Auto-pick is inactive. Enable to automatically pick champions." Foreground="{StaticResource TextColorBrush}" FontSize="14" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <!-- Separator -->
                                    <Rectangle Height="1" Fill="#3E3E4A" Margin="0,10,0,30" />
                                    
                                    <!-- App Updates Section -->
                                    <TextBlock Text="APP UPDATES" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>
                                    <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Check for application updates" Foreground="{StaticResource TextColorBrush}" FontSize="14" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="txtCurrentVersion" Text="Current version: v1.0.0" Foreground="{StaticResource TextColorBrush}" FontSize="12" Opacity="0.7" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                <Button x:Name="btnCheckUpdates" Content="Check for Updates" Style="{StaticResource ModernButton}" Grid.Column="1" Click="btnCheckUpdates_Click" Padding="15,8" MinHeight="40" FontSize="14"/>
                                            </Grid>
                                            <TextBlock Text="Automatically checks for updates when the application starts. Click the button above to manually check for updates." Foreground="{StaticResource TextColorBrush}" FontSize="14" TextWrapping="Wrap" Margin="0,10,0,0" Opacity="0.7"/>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>
                    <TabItem Header="AUTO-PICK" Style="{StaticResource TabItemStyle}">
                        <Grid Margin="0,20,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Top Controls -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                <TextBlock Text="AUTO-PICK SETTINGS" FontSize="16" FontWeight="SemiBold" 
                      Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,15,0">
                                        <CheckBox x:Name="chkAutoPickEnabled" Content="Enable Auto-Pick" 
                             Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,5"
                             Checked="chkAutoPickEnabled_Checked" Unchecked="chkAutoPickEnabled_Unchecked"/>
                                        <CheckBox x:Name="chkAutoBanEnabled" Content="Enable Auto-Ban" 
                             Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,5"
                             Checked="chkAutoBanEnabled_Checked" Unchecked="chkAutoBanEnabled_Unchecked"/>
                                        <CheckBox x:Name="chkAutoSpellsEnabled" Content="Enable Auto-Spells" 
                             Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,5"
                             Checked="chkAutoSpellsEnabled_Checked" Unchecked="chkAutoSpellsEnabled_Unchecked"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Vertical">
                                        <CheckBox x:Name="chkInstantLock" Content="Instant Lock-in (Pick)" 
                             Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,5"
                             IsEnabled="{Binding ElementName=chkAutoPickEnabled, Path=IsChecked}"
                             Checked="chkInstantLock_Checked" Unchecked="chkInstantLock_Unchecked"/>
                                        <CheckBox x:Name="chkInstantBan" Content="Instant Lock-in (Ban)" 
                             Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,5"
                             IsEnabled="{Binding ElementName=chkAutoBanEnabled, Path=IsChecked}"
                             Checked="chkInstantBan_Checked" Unchecked="chkInstantBan_Unchecked"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Main Content - Selection Tabs -->
                            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                                <TabItem Header="Pick Champions" Style="{StaticResource TabItemStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Champion Selection -->
                                        <Grid Grid.Row="0" Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Primary Champion -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="PRIMARY CHAMPION" 
                                  Foreground="{StaticResource TextColorBrush}" FontSize="14" 
                                  Margin="0,0,10,5"/>
                                            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource AccountCard}" 
                                Height="180" Width="180" HorizontalAlignment="Left"
                                x:Name="primaryChampCard" MouseDown="primaryChampCard_MouseDown">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding PrimaryChampionImage}"
                                       Width="120" Height="120" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding PrimaryChampionName}" 
                                           FontSize="16" FontWeight="Bold" TextAlignment="Center"
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextColorBrush}"/>
                                                </Grid>
                                            </Border>

                                            <!-- Secondary Champion -->
                                            <TextBlock Grid.Column="1" Grid.Row="0" Text="SECONDARY CHAMPION" 
                                  Foreground="{StaticResource TextColorBrush}" FontSize="14" 
                                  Margin="10,0,0,5"/>
                                            <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource AccountCard}" 
                                Height="180" Width="180" HorizontalAlignment="Left" Margin="10,0,0,0"
                                x:Name="secondaryChampCard" MouseDown="secondaryChampCard_MouseDown">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding SecondaryChampionImage}"
                                       Width="120" Height="120" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding SecondaryChampionName}" 
                                           FontSize="16" FontWeight="Bold" TextAlignment="Center"
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextColorBrush}"/>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Delay Settings -->
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="PICK TIMING SETTINGS" FontSize="16" FontWeight="SemiBold"
                                  Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>

                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Champion Hover Delay (ms):" 
                                      Foreground="{StaticResource TextColorBrush}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="btnDecreaseHoverDelay" Content="-" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnDecreaseHoverDelay_Click"/>
                                                    <TextBox x:Name="txtPickHoverDelay" Width="80" Margin="10,0" TextAlignment="Center"
                                         Style="{StaticResource ModernTextBox}" Text="0"/>
                                                    <Button x:Name="btnIncreaseHoverDelay" Content="+" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnIncreaseHoverDelay_Click"/>
                                                </StackPanel>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Champion Lock-in Delay (ms):" 
                                      Foreground="{StaticResource TextColorBrush}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="btnDecreaseLockDelay" Content="-" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnDecreaseLockDelay_Click"/>
                                                    <TextBox x:Name="txtPickLockDelay" Width="80" Margin="10,0" TextAlignment="Center"
                                         Style="{StaticResource ModernTextBox}" Text="1000"/>
                                                    <Button x:Name="btnIncreaseLockDelay" Content="+" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnIncreaseLockDelay_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="Ban Champion" Style="{StaticResource TabItemStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Ban Champion Selection -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                            <TextBlock Text="CHAMPION TO BAN" Foreground="{StaticResource TextColorBrush}" 
                                  FontSize="14" Margin="0,0,0,5"/>
                                            <Border Style="{StaticResource AccountCard}" Height="180" Width="180" 
                                HorizontalAlignment="Left" x:Name="banChampCard" 
                                MouseDown="banChampCard_MouseDown">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding BanChampionImage}"
                                       Width="120" Height="120" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding BanChampionName}" 
                                           FontSize="16" FontWeight="Bold" TextAlignment="Center"
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextColorBrush}"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>

                                        <!-- Ban Delay Settings -->
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="BAN TIMING SETTINGS" FontSize="16" FontWeight="SemiBold"
                                  Foreground="{StaticResource TextColorBrush}" Margin="0,0,0,10"/>

                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Ban Hover Delay (ms):" 
                                      Foreground="{StaticResource TextColorBrush}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="btnDecreaseBanHoverDelay" Content="-" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnDecreaseBanHoverDelay_Click"/>
                                                    <TextBox x:Name="txtBanHoverDelay" Width="80" Margin="10,0" TextAlignment="Center"
                                         Style="{StaticResource ModernTextBox}" Text="0"/>
                                                    <Button x:Name="btnIncreaseBanHoverDelay" Content="+" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnIncreaseBanHoverDelay_Click"/>
                                                </StackPanel>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Ban Lock-in Delay (ms):" 
                                      Foreground="{StaticResource TextColorBrush}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button x:Name="btnDecreaseBanLockDelay" Content="-" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnDecreaseBanLockDelay_Click"/>
                                                    <TextBox x:Name="txtBanLockDelay" Width="80" Margin="10,0" TextAlignment="Center"
                                         Style="{StaticResource ModernTextBox}" Text="1000"/>
                                                    <Button x:Name="btnIncreaseBanLockDelay" Content="+" Width="40" Height="40"
                                        Style="{StaticResource SecondaryButton}" Click="btnIncreaseBanLockDelay_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="Summoner Spells" Style="{StaticResource TabItemStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Spell Selection -->
                                        <Grid Grid.Row="0" Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Spell 1 -->
                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="SPELL 1" 
                                  Foreground="{StaticResource TextColorBrush}" FontSize="14" 
                                  Margin="0,0,10,5"/>
                                            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource AccountCard}" 
                                Height="180" Width="180" HorizontalAlignment="Left"
                                x:Name="spell1Card" MouseDown="spell1Card_MouseDown">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding Spell1Image}"
                                       Width="120" Height="120" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Spell1Name}" 
                                           FontSize="16" FontWeight="Bold" TextAlignment="Center"
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextColorBrush}"/>
                                                </Grid>
                                            </Border>

                                            <!-- Spell 2 -->
                                            <TextBlock Grid.Column="1" Grid.Row="0" Text="SPELL 2" 
                                  Foreground="{StaticResource TextColorBrush}" FontSize="14" 
                                  Margin="10,0,0,5"/>
                                            <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource AccountCard}" 
                                Height="180" Width="180" HorizontalAlignment="Left" Margin="10,0,0,0"
                                x:Name="spell2Card" MouseDown="spell2Card_MouseDown">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Image Grid.Row="0" Source="{Binding Spell2Image}"
                                       Width="120" Height="120" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Spell2Name}" 
                                           FontSize="16" FontWeight="Bold" TextAlignment="Center"
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextColorBrush}"/>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" Text="Summoner spells will automatically be selected when entering champion select." 
                              Foreground="{StaticResource TextColorBrush}" TextWrapping="Wrap"/>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>